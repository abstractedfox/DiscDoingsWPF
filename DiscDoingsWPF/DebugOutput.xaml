<Window x:Class="DiscDoingsWPF.DebugOutput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscDoingsWPF"
        mc:Ignorable="d"
        Title="DebugOutput" Height="450" Width="800"
        Closed="HideThis"
        Closing="HideThis">
    <Grid>
        <StackPanel>
            <Label x:Name="DebugOutputTaskCounter"
               FontSize="16"
               FontWeight="Bold">
                Tasks:
            </Label>
            <TextBox x:Name="DebugOutputTextBox"
                 VerticalScrollBarVisibility="Visible"
            HorizontalAlignment="Center" Margin="0,10,0,0" 
                     TextWrapping="Wrap" 
                     Text="TextBox" 
                     Width="688" Height="360"
                 />

        </StackPanel>

    </Grid>
</Window>
