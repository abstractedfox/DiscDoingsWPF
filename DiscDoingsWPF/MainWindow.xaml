<Window x:Class="DiscDoingsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscDoingsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="896" Width="800"
        x:Name="TheMainWindow">
    
    
    <Grid>
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_New" 
                                  Click="New_Click"/>
                        <MenuItem Header="_Open" 
                                  Click="FileOpen_Click"/>
                        <MenuItem Header="_Save" 
                                  Click="FileSave_Click"/>
                        <Separator />
                        <MenuItem Header="_Exit" />
                    </MenuItem>
                </Menu>
            </DockPanel>
            <TabControl>
                <TabItem Header="All Files">
                    <StackPanel>

                        <Label Content="All files"
                       Margin ="0,15,0,0"
                       Width="689"/>

                        <StackPanel Orientation="Horizontal"
                                    Width="700"
                                    Margin="0,0,0,5">
                            <ListBox 
                                Margin="0,0,0,0"
                            x:Name="AllFilesListBox"
                            Width="400"
                            Height="400"
                            SelectionChanged="ChooseFileList"
                            SelectionMode="Extended"
                            MouseDoubleClick="FileViewListBox_MouseDoubleClick"
                            />
                            <StackPanel Orientation="Vertical"
                                        Width="290"
                                        Margin="10,0,0,0">
                                <Label Content="No file selected"
                                       x:Name="AllFiles_DetailsName"/>

                                <Label Content="Located:"
                                       x:Name="AllFiles_DetailsPath"
                                       Margin="8,0,0,0"/>
                                <Label Content="Size:"
                                       x:Name="AllFiles_DetailsSize"
                                       Margin="8,0,0,0"/>
                                <Button Content="Remove File"
                                Click="AllFiles_RemoveFileButtonClick"/>
                            </StackPanel>
                        </StackPanel>
                        
                        
                        
                        <Button Content="Add Files!"
                                Click="OpenFilePicker"
                                HorizontalAlignment="Center"/>

                        <Button Content="Add a Directory!"
                                Margin="0,10,0,0"
                                Click="OpenFolderPicker"
                                HorizontalAlignment="Center"/>

                        <Button Content="Audit All Files!" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0"
                            Click="compareChecksums"/>

                        <Button Content="Open Debug View" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0"
                            Click="openDebugWindow"/>

                        <Button Content="Mystery button" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0"
                            Click="MixedUseButton"/>


                    </StackPanel>

                </TabItem>
                <TabItem Header="Burn view">
                    <StackPanel Width="500">
                        <Label Content="Burn List"/>
                        <ListBox 
                    x:Name="BurnViewListBox"
                    Width="500"
                    Height="300"
                    SelectionChanged="ChooseBurnList"
                    SelectionMode="Single"
                    MouseDoubleClick="BurnViewListBox_MouseDoubleClick"
                    />

                        <Label Content="Volume Size (Bytes)"
                               Margin="0,0,0,0"/>
                        <TextBox
                        x:Name="VolumeSizeTextInput"
                        TextChanged="VolumeSizeTextInput_TextChanged"/>

                        <Button
                        Margin="0,15,0,0"
                        Click="CalculateBurnListButtonClick">Calculate burn lists from files</Button>

                        <Button
                        Margin="0,15,0,0"
                        Click="MarkBurnedButtonClick">
                            Mark this as burned
                        </Button>
                        
                        <Button
                        Margin="0,15,0,0"
                        Click="RemoveBurnButtonClick">
                            Remove this burn
                        </Button>

                    </StackPanel>

                </TabItem>

                <TabItem Header="Discs Burned">
                    <StackPanel Width="500">
                        <Label Content="Discs Burned"
                           />
                        <ListBox 
                            Margin="0,0,0,0"
                        x:Name="BurnedDiscsListBox"
                        Width="400"
                        Height="400"
                        SelectionMode="Single"
                    MouseDoubleClick="BurnedDiscsListBox_MouseDoubleClick"
                        />
                        <Button
                        Margin="0,15,0,0"
                        Click="MarkUnburnedButtonClick">
                            Unmark this as burned
                        </Button>
                    </StackPanel>
                </TabItem>
            </TabControl>

        </StackPanel>
    </Grid>
</Window>
